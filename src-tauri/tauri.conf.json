{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Monitor Dashboard",
  "version": "1.0.0",
  "identifier": "com.monitor.dashboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Monitor Dashboard",
        "width": 720,
        "height": 400,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 720,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "nsis", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
